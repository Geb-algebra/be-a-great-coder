{
  "name": "be-a-great-coder",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./server/build-server.ts",
    "deploy": "fly deploy --remote-only",
    "dev": "MOCKS=true remix dev -c \"tsx ./server/index.ts\"",
    "start": "NODE_ENV=production node ./server-build/index.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier --write .",
    "typecheck": "tsc",
    "test:unit": "run-s test:unit:reset-db-dev test:unit:watch",
    "test:unit:ci": "run-s test:unit:reset-db test:unit:run",
    "test:unit:reset-db": "npx prisma migrate reset -f",
    "test:unit:reset-db-dev": "npx prisma db push --force-reset",
    "test:unit:watch": "vitest",
    "test:unit:run": "vitest run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 \"npx playwright test\"",
    "test:e2e:ui": "start-server-and-test dev http://localhost:3000 \"npx playwright test --ui\"",
    "validate": "run-s format lint typecheck test:unit:ci test:e2e"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.9.1",
    "@remix-run/css-bundle": "^2.6.0",
    "@remix-run/node": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "@remix-run/serve": "^2.6.0",
    "@simplewebauthn/browser": "^9.0.1",
    "@simplewebauthn/server": "^9.0.2",
    "@types/express": "^4.17.21",
    "close-with-grace": "^1.2.0",
    "express": "^4.18.2",
    "isbot": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-google": "^2.0.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@remix-run/dev": "^2.6.0",
    "@remix-run/eslint-config": "^2.6.0",
    "@remix-run/testing": "^2.6.0",
    "@simplewebauthn/types": "^9.0.1",
    "@testing-library/react": "^14.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^13.3.8",
    "msw": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prisma": "^5.9.1",
    "remix-development-tools": "^3.7.4",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": "20"
  }
}
